<h1>Genre: <%= genre.name %></h1>

<div style="margin-left: 20px; margin-top: 20px;">
  <h4>Books</h4>

  <dl>
    <% if (genre_books.length > 0) { %>
      <% genre_books.forEach(function(book) { %>
        <dt>
          <a href="<%= book.url %>"><%= book.title %></a>
        </dt>
        <dd><%= book.summary %></dd>
      <% }); %>
    <% } else { %>
      <p>This genre has no books</p>
    <% } %>
  </dl>
  <p>
    <a href="<%= genre.url %>/update">Update this genre</a>
  </p>
  <p>
    <a href="<%= genre.url %>/delete">Delete this genre</a>
  </p>
</div>
